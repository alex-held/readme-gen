{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "sourceMap": true
  },

  "exclude": [
    "node_modules", "dist"
  ],

  "include":["src/**/*"],
}
